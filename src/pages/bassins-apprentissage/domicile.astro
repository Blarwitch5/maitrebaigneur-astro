---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageTitle from "@components/header/PageTitle.astro";

//data
const title = "Maître-Baigneur | Notre bassin d'apprentissage à Domicile";
const description = "";
const pageImageUrl = "/images/page-title/page_domicile-bassins.jpg";
---

<BaseLayout title={title} descritpion={description}>
	<Header />
	<PageTitle pageTitle="Domicile" pageImageUrl={pageImageUrl} pageImageAlt="Maître-Baigneur exerçant à domicile" />
