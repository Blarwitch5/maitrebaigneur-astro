---
import BaseLayout from '@layouts/BaseLayout.astro';
import Main from '@components/Main.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import PageTitle from '@components/header/PageTitle.astro';
import Pools from '@components/widgets/Pools.astro';
import SkipToContent from '@components/ui/SkipToContent.astro';

import fallback from '@assets/images/page-title/fallback.jpg';

//data

const page = {
  metaTitle: "Bassins d'apprentissage",
  description:
    "Découvrez les bassins d'apprentissage de Maître-Baigneur, où nos éducateurs utilisent la pédagogie Maître-Baigneur pour enseigner la natation à des enfants de 3 à 12 ans.",
  title: "Bassins d'apprentissage",

  image: {
    path: fallback,
    alt: "Vue sur des pieds trempants dans l'eau d'une piscine",
  },
};
---

<BaseLayout title={page.title} description={page.description}>
  <SkipToContent />
  <Header />
  <PageTitle pageTitle={page.title} pageImagePath={page.image.path} pageImageAlt={page.image.alt} />

  <Main>
    <section class='pools' aria-label="Les bassins d'apprentissage de Maître-Baigneur">
      <Pools />
    </section>
    <Footer />
  </Main>
</BaseLayout>
<style></style>
