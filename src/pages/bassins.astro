---
import BaseLayout from "@layouts/BaseLayout.astro";
import Main from "@components/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageTitle from "@components/header/PageTitle.astro";
import Pools from "@components/widgets/Pools.astro";
import Section from "@components/Section.astro";
import SkipToContent from "@components/ui/SkipToContent.astro";

//data

const page = {
	metaTitle: "Maître-Baigneur | Bassins d'apprentissage",
	description: "",
	title: "Bassins d'apprentissage",
	imageUrl: "/images/page-title/fallback.jpg",
	imageAlt: "Vue sur des pieds trempants dans l'eau d'une piscine",
};
---

<BaseLayout title={page.metaTitle} descritpion={page.description}>
	<SkipToContent />
	<Header />
	<PageTitle pageTitle={page.title} pageImageUrl={page.imageUrl} pageImageAlt={page.imageAlt} />

	<Main>
		<Section class="pools" ariaLabel="Les bassins d'apprentissage de Maître-Baigneur">
			<Pools />
		</Section>
		<Footer />
	</Main>

	<style>
		h1 {
			font-size: 3rem;
			font-weight: 800;
			margin: 0;
		}
	</style>
</BaseLayout>
