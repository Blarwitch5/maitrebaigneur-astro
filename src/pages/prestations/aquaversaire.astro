---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageTitle from "@components/header/PageTitle.astro";

//data
const title = "Maître-Baigneur | Aquaversaire";
const description = "";
const pageImageUrl = "/images/page-title/page_aquaversaire.jpg";
---

<BaseLayout title={title} descritpion={description}>
	<Header />
	<PageTitle
		pageTitle="Aquaversaire"
		pageImageUrl={pageImageUrl}
		pageImageAlt="Groupe de jeunes gens assis sur une bouée et s'amusant dans une piscine lors d'un anniversaire"
	/>

	<main><h1>Aquaversaire</h1></main>
	<Footer />
</BaseLayout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
