---
import BaseLayout from "@layouts/BaseLayout.astro";
import Main from "@components/Main.astro";
import SkipToContent from "@components/ui/SkipToContent.astro";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageTitle from "@components/header/PageTitle.astro";
import Section from "@components/Section.astro";
import Container from "@components/Container.astro";
import LevelsGrid from "@components/widgets/LevelsGrid.astro";
import SwimmingPrices from "@components/widgets/prices/SwimmingPrices.astro";
import Waves from "@components/ui/shapes/Waves.astro";

//data
const page = {
	metaTitle: "Maître-Baigneur | Cours de natation",
	description: "",
	title: "Cours de natation",
	imageUrl: "/images/page-title/page_natation.jpg",
	imageAlt: "Petite fille avec lunettes de natation nageant sous l'eau tout sourire",
};
---

<BaseLayout title={page.metaTitle} descritpion={page.description}>
	<SkipToContent />
	<Header />
	<PageTitle pageTitle={page.title} pageImageUrl={page.imageUrl} pageImageAlt={page.imageAlt} />
	<Main>
		<Section class="levels">
			<Container>
				<h2>Nos différents groupes d’apprentissage de la natation</h2>
				<p>
					Grâce à la pédagogie Maître-Baigneur, nager ne sera plus jamais une corvée ! Finis les clichés sur l’apprentissage de la natation classique
					avec les ceintures… Place désormais à du matériel ludique et pédagogique afin d’apprendre en s’amusant.
				</p>
				<LevelsGrid />
			</Container>
		</Section>
		<Section class="fear" backgroundColor="var(--color-bg-light-alt)">
			<Container>
				<Waves atTopOfSection />
				<div class="fear__wrapper">
					<div class="fear__img">
						<img src="/images/levels/6_peur-du-baigneur.jpg" alt="Illustration de la peur du baigneur" />
					</div>
					<div class="fear__content">
						<h3 class="fear__title">La peur du baigneur</h3>
						<p>Libérez-vous, jetez-vous à l’eau !</p>
						<p>Nous sommes là pour vous aider à vaincre votre crainte du monde aquatique. L’Aquaphobie ne sera plus qu’un mauvais souvenir.</p>
					</div>
				</div>
				<Waves />
			</Container>
		</Section>
		<Section class="swimming-prices">
			<Container>
				<SwimmingPrices />
			</Container>
		</Section>
	</Main>
</BaseLayout>
<Footer />

<style lang="scss">
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

	.fear {
		
		&__wrapper {
			position: relative;
		}
		&__img {
			position: absolute;
			height: 350px;
			z-index: 9;
			top: -50%;
			overflow: hidden;
			width: 25%;
			border-radius: 20px;
			transform: translatey(0px);

			// box-shadow: 0 10px 15px -3px hsla(var(--link-color-primary-hsl), 0.3), 0 4px 6px -4px hsla(var(--link-color-primary-hsl), 0.3);
			animation: float 6s ease-in-out infinite;
			img {
				object-fit: cover;
				height: 100%;
			}
		}
		&__content {
			padding-left: calc(25% + var(--space-l));
		}
	}
</style>
