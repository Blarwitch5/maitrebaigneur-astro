---
import BaseLayout from "@layouts/BaseLayout.astro";
import Main from "@components/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageTitle from "@components/header/PageTitle.astro";
import Section from "@components/Section.astro";
import Container from "@components/Container.astro";

import SkipToContent from "@components/ui/SkipToContent.astro";

//data
const page = {
	metaTitle: "Maître-Baigneur | Événements et sécurité",
	description: "",
	title: "Événements et sécurité",
	imageUrl: "/images/page-title/page_surveillance.jpg",
	imageAlt: "Couple de mariés se jettant à l'eau dans une piscine",
	image: {
		webp: "/images/page-title/webp/page_surveillance.webp",
		jpg: "/images/page-title/page_surveillance.jpg",
		alt: "Couple de mariés se jettant à l'eau dans une piscine",
	},
};
---

<BaseLayout title={page.metaTitle} descritpion={page.description}>
	<SkipToContent />
	<Header />
	<PageTitle pageTitle={page.title} pageImageUrlWebp={page.image.webp} pageImageUrl={page.image.jpg} pageImageAlt={page.image.alt} />

	<Main>
		<Section>
			<Container>
				<h1>Événements et sécurité</h1>
			</Container>
		</Section>
	</Main>
	<Footer />
</BaseLayout>

<style>
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
</style>
