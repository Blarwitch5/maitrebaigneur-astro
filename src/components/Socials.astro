---
const socials = [
	{
		link: "https://www.facebook.com/MaitreBaigneur/",
		title: "Facebook",
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none"><path fill="currentColor" d="M15.25 25.333a.75.75 0 0 0 1.5 0h-1.5Zm1.5-10.666a.75.75 0 0 0-1.5 0h1.5ZM20 7.417a.75.75 0 0 0 0-1.5v1.5Zm-4 3.25h-.75.75Zm-.75 4a.75.75 0 0 0 1.5 0h-1.5Zm.75-.75a.75.75 0 0 0 0 1.5v-1.5Zm2.667 1.5a.75.75 0 1 0 0-1.5v1.5Zm-2.667 0a.75.75 0 0 0 0-1.5v1.5Zm-2.667-1.5a.75.75 0 0 0 0 1.5v-1.5Zm3.417 11.416V14.667h-1.5v10.666h1.5ZM20 5.917a4.75 4.75 0 0 0-4.75 4.75h1.5A3.25 3.25 0 0 1 20 7.417v-1.5Zm-4.75 4.75v4h1.5v-4h-1.5Zm.75 4.75h2.667v-1.5H16v1.5Zm0-1.5h-2.667v1.5H16v-1.5Z"/></svg>',
	},
	{
		link: "https://www.instagram.com/maitre_baigneur_aix/",
		title: "Instagram",
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 6.667h-8A5.333 5.333 0 0 0 6.667 12v8A5.333 5.333 0 0 0 12 25.333h8A5.333 5.333 0 0 0 25.333 20v-8A5.333 5.333 0 0 0 20 6.667Z" clip-rule="evenodd"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 20a4 4 0 1 1 0-8 4 4 0 0 1 0 8Z" clip-rule="evenodd"/><rect width="2.667" height="2.667" x="20" y="12" fill="currentColor" rx="1" transform="rotate(-90 20 12)"/><rect width="1.333" height="1.333" x="20.667" y="11.333" stroke="currentColor" stroke-linecap="round" rx=".5" transform="rotate(-90 20.667 11.333)"/></svg>',
	},
	{
		link: "https://api.whatsapp.com/send?phone=0033677007584",
		title: "Whastapp",
		icon: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.333 25.333A9.333 9.333 0 1 0 8.9 20l-2.232 5.333L12.523 24a9.29 9.29 0 0 0 4.81 1.333Z" clip-rule="evenodd"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.721 14.755a1.377 1.377 0 1 1 1.39-1.378 1.384 1.384 0 0 1-1.39 1.378v0ZM18.556 18.557a1.388 1.388 0 1 0 2.776.022 1.388 1.388 0 0 0-2.776-.022v0Z" clip-rule="evenodd"/><path stroke="currentColor" stroke-linecap="round" stroke-width="1.5" d="M13.333 13.377c-.018 4.623 4.4 7.063 6.612 6.558"/></svg>',
	},
];
const { iconVersion } = Astro.props;
---

<!-- Socials media -->
<ul class={`socials ${iconVersion}`}>
	{
		socials.map((social) => (
			<li>
				<a
					href={social.link}
					class="social-link"
					title={`Visitez notre page ${social.title}`}
					target="_blank"
					rel="noopener"
					set:html={social.icon}
				/>
			</li>
		))
	}
</ul>

<style lang="scss">
	.socials {
		padding: 0;
		list-style-type: none;
		display: flex;
		flex-direction: row;
		justify-content: center;
		gap: 1rem;

		//social icons commun style
		.social-link {
			border-radius: 50%;
			width: 3rem;
			height: 3rem;
			display: flex;
			align-items: center;
			justify-content: center;
			position: relative;
			overflow: hidden;

			&::before {
				position: absolute;
				content: "";
				top: -2px;
				bottom: -2px;
				left: -2px;
				right: 100%;
				transition: 0.2s;
				transition-timing-function: ease;
				opacity: 0.1;
				border-radius: inherit;
				transition-timing-function: cubic-bezier(0.25, 0.75, 0.2, 1);
			}

			&:hover {
				&::before {
					right: -2px;
				}
			}
		}
		//if bg is dark
		&.light {
			.social-link {
				background-color: hsla(var(--link-color-white-hsl), 0.1);
				border-radius: 50%;
				width: 3rem;
				height: 3rem;
				display: flex;
				align-items: center;
				justify-content: center;
				box-shadow: inset 0 0 0px 1px hsla(var(--link-color-white-hsl), 0.2);
				position: relative;
				overflow: hidden;
				color: var(--color-white);

				&::before {
					position: absolute;
					content: "";
					top: -2px;
					bottom: -2px;
					left: -2px;
					right: 100%;
					background: var(--color-white);
					transition: 0.2s;
					transition-timing-function: ease;
					opacity: 0.1;
					border-radius: inherit;
					transition-timing-function: cubic-bezier(0.25, 0.75, 0.2, 1);
				}

				&:hover {
					box-shadow: inset 0 0 0px 2px var(--color-white);
					&::before {
						right: -2px;
					}
				}
			}
		}
		//if bg is light
		&.dark {
			.social-link {
				background-color: hsla(var(--link-color-primary-hsl), 0.1);
				box-shadow: inset 0 0 0px 1px hsla(var(--link-color-primary-hsl), 0.2);
				color: var(--color-primary);

				&::before {
					background: var(--color-primary);
				}

				&:hover {
					box-shadow: inset 0 0 0px 2px var(--color-primary);
					&::before {
						right: -2px;
					}
				}
			}
		}
	}
</style>
