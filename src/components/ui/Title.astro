---
interface Props {
  level?: "1" | "2" | "3" | "4" | "5" | "6";
  class?: string;
  animate?: boolean;
}

const { level, class: className, animate, ...rest } = Astro.props;
const TitleLevel = `h${level}`;
---

{
  TitleLevel && (
    <TitleLevel
      class:list={["", className]}
      {...rest}
      data-aos={animate ? "zoom-in" : undefined}
    >
      <slot />
    </TitleLevel>
  )
}
