<button id="gototopBtn" class="gototop-btn" title="Retour en haut de la page" aria-label="Retour en haut de la page">
	<span class="visually-hidden">Retour en haut de la page</span>
	<span></span>
</button>

<style lang="scss" scoped>
	.gototop-btn {
		display: none;
		position: fixed;
		width: 3rem;
		height: 3rem;
		bottom: 20px;
		right: 30px;
		z-index: 99;
		border: none;
		background-color: red;
		color: white;
		cursor: pointer;
		padding: 15px;
		border-radius: 100vw;
		font-size: 18px;
		box-shadow: 0 10px 15px -3px hsla(var(--link-color-primary-hsl), 0.3), 0 4px 6px -4px hsla(var(--link-color-primary-hsl), 0.3);

		&:hover {
			  background-color: #555; /* Add a dark-grey background on hover */
		}
	}
</style>
<script is:inline>
	// Get the button by getting the element with the id "gototopBtn"
	const gototopBtn = document.getElementById("gototopBtn");
	// Add an event listener to the button that will call the topFunction when clicked
	gototopBtn.addEventListener("click", topFunction);
	// Add an event listener to the window that will call the scrollFunction when the window is scrolled
	window.addEventListener("scroll", function () {
		scrollFunction();
	});

	// Function that will be called when the window is scrolled
	function scrollFunction() {
		// If the vertical scroll position of the document is more than 20 pixels
		if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
			// Show the button
			gototopBtn.style.display = "block";
		} else {
			// Hide the button
			gototopBtn.style.display = "none";
		}
	}

	// Function that will be called when the gototopBtn is clicked
	function topFunction() {
		// Set the vertical scroll position of the document to 0 pixels
		document.body.scrollTop = 0; // For Safari
		document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
	}
</script>
