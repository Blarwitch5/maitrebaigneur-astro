---
interface Props {
	class?: string;
	backgroundColor?: string;
	ariaLabel?: string;
}
const backgroundColor = Astro.props.backgroundColor ? Astro.props.backgroundColor : "white";

const { class: className, ariaLabel } = Astro.props;
---

<section class:list={["", className]} aria-label={ariaLabel} tabindex="0" style={`background-color: ${backgroundColor}`}>
	<slot />
</section>

<style scoped>
	section {
		position: relative;
		padding-block: 4rem;
		padding-inline: 0;
	}
</style>
