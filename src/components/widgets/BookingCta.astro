---
import Buttons from "@components/ui/Buttons.astro";
import Container from "@components/Container.astro";
---

<Container className="booking__section">
	<div class="booking__img">
		<img loading="lazy" src="/images/hero.jpg" alt="" class="" />
	</div>
	<div class="booking__content">
		<h4 class="booking-title">Vous souhaitez commencer l’aventure avec Maître-Baigneur ?</h4><p class="booking__txt">
			N’hésitez plus une seconde et réservez votre premier cours !!!
		</p>
		<Buttons class="btn btn-outline" href="https://clicrdv.com/maitrebaigneur" target="_blank">Je réserve</Buttons>
	</div>
</Container>
<style lang="scss">
	.booking {
		&__section {
			display: flex;
			flex-wrap: nowrap;
			gap: 4rem;
			align-items: flex-start;
		}

		&__img {
			flex: 0 0 40%;
			overflow: hidden;

			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 20px;
			}
		}
		&__content {
			display: flex;
			gap: 1rem;
			flex-direction: column;
			color: var(--color-white);
		}
		&__title {
			color: inherit;
			margin-bottom: 0;
			font-size: var(--fs-large);
			font-weight: bold;
		}
	}
</style>
