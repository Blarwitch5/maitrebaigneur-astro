---
import Swiper from "@components/ui/swiper/Swiper.astro";
import SwiperSlide from "@components/ui/swiper/SwiperSlide.astro";
import Buttons from "@components/ui/Buttons.astro";
import Container from "@components/Container.astro";

const swiperParameters = {
	// Optional parameters
	loop: true,
	autoplay: { delay: 1000 },
};
---

<Container className="pools__content">
	<h3 class="pools__title">Des cours de natation, d’accord, mais où ?</h3>
	<p class="pools__desc">Nous opérons aussi bien à domicile que dans nos bassins d’apprentissage</p>
	<Buttons href="/bassins" class={`pools__btn`} regular>Découvrir tous nos bassins</Buttons>

	<Container fullWidth>
		<Swiper class="pools-swiper">
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
			<SwiperSlide>
				<img src="https://via.placeholder.com/200x100" alt="Logo de la ville d'Aix-en-Provence" title="Aix-en-Provence" />
			</SwiperSlide>
		</Swiper>
	</Container>
</Container>
<style lang="scss">
	.pools {
		&__content {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}

		&-title {
			margin-bottom: 0;
		}
		&-btn {
			padding: 0.5rem 1.2rem;
		}
	}
	.swiper {
		width: 100%;
		height: 400px;
		margin-block: 2rem;

		&-slide {
			overflow: hidden;
			margin-inline: 1.5rem;
			display: flex;
			align-items: center;

			&:nth-child(even) {
				img {
					height: 75%;
				}
			}
		}

		* img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			border-radius: 20px;
		}
	}
</style>
