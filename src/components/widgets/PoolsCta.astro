---
import Button from '@components/ui/Button.astro';
import Title from '@components/ui/Title.astro';
import { Picture } from 'astro:assets';
import site from '@assets/data/data.json';
import kabanonThumb from '@assets/images/thumbnails/kabanon-thumb.jpg';
import domicileThumb from '@assets/images/thumbnails/domicile-thumb.jpg';

const { siteLinks } = site;
const pools = siteLinks.pools;
import { images } from '@utils/images';
---

<div class='container pools__wrapper'>
  <div class='pools__content' data-aos='zoom-in'>
    <Title level='3' class='pools__title'>
      Vous êtes à la recherche d'un bassin pour apprendre à nager ?
    </Title>
    <p class='pools__desc'>
      Vous êtes au bon endroit. Nous opérons aussi bien à domicile que dans nos bassins
      d’apprentissage. Choisissez un de nos bassins et commencez votre aventure <span
        class='pacifico'>Maître-Baigneur</span
      >. Nous sommes impatients de vous accueillir et de vous aider à atteindre vos objectifs.
    </p>
    <Button href='/bassins' class={`pools__btn btn btn__regular`}> Découvrir nos bassins </Button>
  </div>
  <ul class='pools__images' data-aos='fade-left'>
    <li style='--x1: 2; --x2: 6; --y1: 1; --y2: 4;'>
      <Picture
        class='partners__item scroll__item'
        src={kabanonThumb}
        alt="Piscine Kabanon des écuries de l'aube"
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 6; --x2: 8; --y1: 2; --y2: 4;'>
      <Picture
        class='partners__item scroll__item'
        src={domicileThumb}
        alt='Piscine à domicile'
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 1; --x2: 4; --y1: 4; --y2: 7;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/planform_2-thumb.jpg'].default}
        alt='Piscine Plan Form'
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 4; --x2: 7; --y1: 4; --y2: 7;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/domicile_2-thumb.jpg'].default}
        alt='Piscine à domicile'
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 7; --x2: 9; --y1: 4; --y2: 6;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/planform-thumb.jpg'].default}
        alt='Piscine Planform'
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 2; --x2: 4; --y1: 7; --y2: 9;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/kabanon_2-thumb.jpg'].default}
        alt="Piscine Kabanon des écuries de l'aube"
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 4; --x2: 7; --y1: 7; --y2: 10;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/aquabecool-thumb.jpg'].default}
        alt='Piscine Aquabecool'
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
    <li style='--x1: 7; --x2: 10; --y1: 6; --y2: 9;'>
      <Picture
        class='partners__item scroll__item'
        src={images['/src/assets/images/thumbnails/kinemouv-thumb.jpg'].default}
        alt="Piscine Kinémouv'"
        width={300}
        height={300}
        formats={['webp']}
      />
    </li>
  </ul>
</div>

<style lang='scss'>
  :global(.pools__wrapper) {
    display: grid;
    grid-template-columns: calc((100% * 2 / 3) - 2rem) calc((100% * 1 / 3) - 2rem);
    gap: 4rem;
    align-items: center;
    padding-bottom: var(--space-lg);

    @media screen and (max-width: 992px) {
      grid-template-columns: calc(40% - 1rem) calc(60% - 1rem);
      gap: 2rem;
    }

    @media screen and (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .pools__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    & > * {
      margin-block: 0;
    }
  }

  ul {
    list-style-type: none;
    max-width: 100%;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 1vmin;
    grid-template-columns: repeat(9, 1fr);
  }

  li:nth-of-type(4) {
    aspect-ratio: 1;
  }

  li {
    padding: 0;
    position: relative;
    max-inline-size: 100%;
    box-shadow:
      0 10px 15px -3px hsla(var(--link-color-primary-hsl), 0.3),
      0 4px 6px -4px hsla(var(--link-color-primary-hsl), 0.3);

    picture {
      width: 100%;
      height: auto;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }

  li {
    grid-column: var(--x1, auto) / var(--x2, auto);
    grid-row: var(--y1, auto) / var(--y2, auto);
  }

  li {
    border-radius: var(--small-border-radius);
    overflow: hidden;
  }
</style>
