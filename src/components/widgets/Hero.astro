---
import { Image } from 'astro:assets';
import Socials from '@components/Socials.astro';
import Button from '@components/ui/Button.astro';
import Title from '@components/ui/Title.astro';
import Waves from '@components/ui/shapes/Waves.astro';

import { images } from '@utils/images';

import { reservationLink } from '@assets/data/data.json';

interface Props {
  ariaLabel: string;
}

const { ariaLabel } = Astro.props;

// Import des images hero disponibles
import hero1 from '@assets/images/hero-1.jpg';
import hero2 from '@assets/images/hero-2.jpg';
import hero3 from '@assets/images/hero-3.jpg';
import hero4 from '@assets/images/hero-4.jpg';

// Tableau des images hero avec leurs alt text
const heroImages = [
  {
    path: hero1,
    alt: "Enfant plongeant sous l'eau rejoignant les bras du maître nageur",
  },
  {
    path: hero2,
    alt: 'Enfant apprenant à nager avec le maître nageur',
  },
  {
    path: hero3,
    alt: "Fille nageant sous l'eau avec un flotteur et ses lunettes de plongée",
  },
  {
    path: hero4,
    alt: 'Trois enfants nageant sur une planche vers le maître nageur',
  },
];

// Sélection aléatoire de l'image de départ
const startIndex = Math.floor(Math.random() * heroImages.length);
---

<section id='hero' class='hero' aria-label={ariaLabel}>
  <div class='hero__img'>
    {
      heroImages.map((hero, index) => (
        <div class={`hero__img-item ${index === startIndex ? 'active' : ''}`} data-index={index}>
          <Image
            src={hero.path}
            alt={hero.alt}
            width={1920}
            height={1080}
            loading={index === 0 ? 'eager' : 'lazy'}
          />
        </div>
      ))
    }
  </div>
  <div class='hero__content'>
    <Title level='1' class='hero__title' data-aos='fade-down'>
      Apprendre à nager<br /><span>c'est toute l'année !</span>
    </Title>
    <div class='hero__cta'>
      <Button
        class='btn btn__outline--inverted'
        data-aos='fade-right'
        href='/contact'
        aria-label='Contactez-nous'
      >
        Contactez-nous
      </Button>
      <Button
        data-aos='fade-left'
        href={reservationLink}
        rel='noopener'
        class='hero-button btn btn__outline'
        newTab
      >
        Je réserve mon cours
      </Button>
    </div>
  </div>
  <div class='socials__wrapper'>
    <Socials iconVersion='light' />
  </div>
  <Waves />
</section>

<style lang='scss'>
  .hero {
    position: relative;
    height: 90vh;
    min-height: 550px;

    &__img {
      z-index: 0;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;

      &::before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: hsla(var(--link-color-black-hsl), 0.4);
        z-index: 2;
      }

      &-item {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        opacity: 0;
        transition: opacity 2s ease-in-out;
        z-index: 0;

        &.active {
          opacity: 1;
          z-index: 1;
        }

        picture {
          height: 100%;
          width: 100%;
        }

        img {
          object-fit: cover;
          height: 100%;
          width: 100%;
        }
      }
    }
    &__content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: calc(100% - 2rem);
      text-align: center;
      color: var(--color-white);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 2;
    }
    &__title {
      color: #fff;
      font-size: var(--fs-xl);
      line-height: 1.2;

      span {
        display: block;
        font-weight: 100;
        font-size: clamp(2rem, 3vw + 1rem, 3rem);
        margin-top: 0.5rem;
      }
    }
    &__cta {
      display: flex;
      align-items: center;
      gap: 1rem;

      @media screen and (max-width: 576px) {
        flex-direction: column-reverse;
        gap: 1rem;
      }
      a {
        min-width: max-content;

        @media screen and (max-width: 576px) {
          min-width: calc(320px - 2rem);
        }
      }
    }
  }

  .socials__wrapper {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    z-index: 8;

    @media screen and (max-width: 768px) {
      right: 50%;
      transform: translateX(50%);
    }
  }
  .bubble {
    position: absolute;
    bottom: 0;

    border-radius: 50%;
    background-image: radial-gradient(
      hsla(var(--link-color-white-hsl), 0.3) 60%,
      hsla(var(--link-color-white-hsl), 1) 80%
    );
    will-change: top, left;
    transform: translateX(-50%);
    animation-name: float;
    animation-timing-function: ease-out;

    &::after {
      content: '';
      position: absolute;
      top: 20%;
      right: 25%;
      width: 33%;
      height: 33%;
      border: 2px solid;
      border-color: hsla(var(--link-color-white-hsl), 0.8) transparent transparent transparent;
      border-radius: 50%;
      transform: rotate(45deg);
    }
  }
  /* animation pour faire remonter les bulles */
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-100%);
    }
  }
</style>

<script>
  (function () {
    const heroImages = document.querySelectorAll('.hero__img-item');
    if (heroImages.length <= 1) return;

    // Créer un cycle aléatoire avec toutes les images
    const createRandomCycle = () => {
      const indices = Array.from({ length: heroImages.length }, (_, i) => i);
      // Mélanger le tableau (algorithme Fisher-Yates)
      for (let i = indices.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [indices[i], indices[j]] = [indices[j], indices[i]];
      }
      return indices;
    };

    // Trouver l'index de l'image actuellement active
    const activeIndex = Array.from(heroImages).findIndex((img) => img.classList.contains('active'));

    // Créer le premier cycle aléatoire avec toutes les images
    let currentCycle = createRandomCycle();
    let cycleIndex = 0;

    // Si une image est déjà active, commencer le cycle à l'image suivante
    if (activeIndex !== -1) {
      const activeInCycle = currentCycle.indexOf(activeIndex);
      if (activeInCycle !== -1) {
        // Commencer après l'image actuellement active
        cycleIndex = (activeInCycle + 1) % currentCycle.length;
      }
    }

    const changeImage = () => {
      // Retirer la classe active de toutes les images
      heroImages.forEach((img) => img.classList.remove('active'));

      // Si on a fini le cycle, créer un nouveau cycle aléatoire
      if (cycleIndex >= currentCycle.length) {
        currentCycle = createRandomCycle();
        cycleIndex = 0;
      }

      // Afficher l'image suivante du cycle
      const nextIndex = currentCycle[cycleIndex];
      heroImages[nextIndex].classList.add('active');

      // Passer à l'image suivante
      cycleIndex++;

      // Si on a fini le cycle, créer un nouveau cycle pour la prochaine fois
      if (cycleIndex >= currentCycle.length) {
        currentCycle = createRandomCycle();
        cycleIndex = 0;
      }
    };

    // Changer l'image toutes les 5 secondes
    setInterval(changeImage, 5000);
  })();
</script>
